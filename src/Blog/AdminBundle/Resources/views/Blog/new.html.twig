        <div class="col-md-12">
            <form class="form-horizontal" action="{{ path('blog_admin.blog.new') }}" method="post">
                {{ form_widget(form) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Create</button>
                        <a class="btn btn-danger" href="{{ path('blog_admin.blog.index') }}">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock body %}

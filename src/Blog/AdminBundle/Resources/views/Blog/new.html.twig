{% extends '::base.html.twig' %}

{% block body %}
    {#TODO: Make this dynamic and the options given by the controller.#}
    {#TODO: Make a base template for blog as they could both need the same styling.#}

    <div class="row">
        <div class="col-md-12">
            <h3>Options</h3>
            <div class="row">
                <a class="admin-option" href="{{ path('blog_admin.blog.index') }}">
                    <div class="col-md-2 well well-sm">
